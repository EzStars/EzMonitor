{
  "name": "ezmonitor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "commit": "git add . && git-cz",
    "build:all": "turbo run build",
    "dev:monitor-sdk": "pnpm --filter @ezstars/monitor-sdk run build",
    "dev:monitor-app": "pnpm --filter @ezstars/monitor-app run dev",
    "prepare": "husky",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm --filter @ezstars/monitor-sdkv2 run build && changeset publish",
    "release": "pnpm changeset:version && pnpm changeset:publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "keywords": [
    "前端监控",
    "前端性能监控",
    "前端错误监控",
    "前端埋点"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.18",
      "@types/react-dom": "^18.3.5"
    }
  },
  "dependencies": {
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rollup": "^4.40.1",
    "turbo": "^2.4.4",
    "typescript-eslint": "^8.28.0",
    "vitepress": "^1.6.3"
  }
}
